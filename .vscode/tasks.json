// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": "\\b\\B",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^.*Starting a Gradle Daemon*",
						"endsPattern": "^.*Quarkus .* started in .*\\. Listening on:*"
					}
				}
			],
			"group": "build",
			"label": "quarkusDev (demo-quarkus-api)",
			"command": "./gradlew quarkusDev --console=plain",
			"windows": {
				"command": "./gradlew quarkusDev --console=plain"
			},
		},
		{
			"type": "shell",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": "\\b\\B",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true
					}
				}
			],
			"group": "build",
			"label": "buildNative (demo-quarkus-api)",
			"command": "./gradlew buildNative --console=plain",
			"windows": {
				"command": "./gradlew buildNative --console=plain"
			},
		}
	]
}